<div class="container">
  <h1> <%= @suit.name %> </h1>
  <p>
    <strong>Name:</strong>
    <%= @suit.name %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= @suit.brand %>
  </p>

  <p>
    <strong>Price</strong>
    <%= @suit.price %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= @suit.style %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= @suit.size %>
  </p>

  <p>
    <strong>Occasion:</strong>
    <%= @suit.occasion %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @suit.colour %>
  </p>

  <% @suit.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

  <div class="navigation">
    <p><%= link_to 'Book this suit', new_suit_booking_path(@suit), class:"btn btn-orange" %> <%= link_to 'Delete', suit_path(@suit), method: :delete, class:"btn btn-orange"%> <%= link_to 'Edit', edit_suit_path, class:"btn btn-orange" %> </p>
    <p> <%= link_to 'See all bookings', bookings_path, class:"btn btn-orange" %> </p>
    <p><%= link_to suits_path, class:"btn btn-gray" do%> <i class="fas fa-arrow-circle-left"></i><span> Back to suits</span>
    <% end %> </p>
  <!-- edit this suit -->
  </div>
</div>
