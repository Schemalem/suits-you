<!-- create a header and add a nav bar -->
<div class="form">
  <%= simple_form_for [ @suit, @booking ] do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :status %>
    <!-- status should be removed, as it should default to "ordered" -->
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="navigation">
  <p><%= link_to "Back", suit_path(@suit) %></p>
</div>
